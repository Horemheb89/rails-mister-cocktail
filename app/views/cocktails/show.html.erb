<h2><%= @cocktail.name %></h2>

<%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>

<ul class="list-group">
  <% @cocktail.doses.each do |dose| %>
    <li class="list-group-item"><%= dose.description %> <%= dose.ingredient.name %></li>
    <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
      <i class="far fa-trash-alt"></i>
    <% end %>
  <% end %>
</ul>


<%= link_to 'Back to cocktail list', cocktails_path(@cocktails), class: "btn btn-primary" %>

<%= link_to "Delete #{@cocktail.name}",
            cocktail_path(@cocktail), class: "btn btn-danger",
            method: :delete,
            data: { confirm: "Are you sure?" } %>

<%= render "doses/form", cocktail: @cocktail, dose: @dose %>
